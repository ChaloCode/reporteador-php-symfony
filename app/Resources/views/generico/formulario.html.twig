{% extends 'base.html.twig' %}
{% block title %}Formulario{% endblock %}
{% block stylesheets %}
  {{ parent() }}   
  <link href='{{ asset("css2/icheck/flat/green.css")}}'  rel="stylesheet">
   <!-- select2 -->
  <link href='{{ asset("css2/select/select2.min.css")}}' rel="stylesheet">
{% endblock %}
{% block body %}
     <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Form Design <small>different form elements</small></h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                      <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Settings 1</a>
                        </li>
                        <li><a href="#">Settings 2</a>
                        </li>
                      </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br />
               
                        {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left '}}) }}
                       
                        {% for child in form.children|keys %}
                            <div class="form-group">
                                {% if 'token' not in form_label(attribute(form.children,child)) %}
                                    {{form_label(attribute(form.children,child)) }}
                                {% endif %}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{form_widget(attribute(form.children,child)) }}
                                </div>
                            </div>                           
                        {% endfor %} 
                         <div class="ln_solid"></div>
                            <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                               <button type="reset" id="form_cancelar" name="form[cancelar]" class="btn btn-primary">Cancelar</button>
                                <button type="submit" class="btn btn-success">Guardar</button>
                            </div>
                         </div>                     
                        {{ form_end(form) }}
                        
                        
                        
                </div>
              </div>
            </div>
         
{% endblock %}
{% block javascripts %}   
    {{ parent() }} 
     <!-- select2 -->
    <script src='{{ asset("js/select/select2.full.js")}}'></script>
    <!-- daterangepicker -->
    <script type="text/javascript" src='{{ asset("js/moment/moment.min.js")}}'></script>
    <script type="text/javascript" src='{{ asset("js/datepicker/daterangepicker.js")}}'></script> 
    <script type="text/javascript">
        $(document).ready(function() {
           // select2 
            $(".select2_single").select2({
                placeholder: "Seleccione una opci√≥n",
                allowClear: true
            });
            $(".select2_group").select2({});
            $(".select2_multiple").select2({
                maximumSelectionLength: 4,
                placeholder: "Seleccione maximo 4 opciones",
                allowClear: true
            }); 
          // fin select2
          
          //daterangepicker
            $('.date-picker-control').daterangepicker({   
               locale: {
                   format: 'DD/MM/YYYY',                                  
                    daysOfWeek: [
                        "Do",
                        "Lu",
                        "Ma",
                        "Mi",
                        "Ju",
                        "Vi",
                        "Sa"
                    ],
                    monthNames: [
                        "Enero",
                        "Febrero",
                        "Marzo",
                        "Abril",
                        "Mayo",
                        "Junio",
                        "Julio",
                        "Agosto",
                        "Septiembre",
                        "Octube",
                        "Noviembre",
                        "Diciembre"
                    ],
                    firstDay: 1
                },  
            singleDatePicker: true,
            calender_style: "picker_4"
            }, function(start, end, label) {               
            console.log(start.toISOString(), end.toISOString(), label);
            });
        });
        <!-- /daterangepicker -->
        
        
   </script>
{% endblock %}
